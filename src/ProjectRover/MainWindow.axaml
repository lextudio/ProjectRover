<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ICSharpCode.ILSpy;assembly=ProjectRover"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dock="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
        xmlns:views="clr-namespace:ICSharpCode.ILSpy.Views"
        xmlns:controls="clr-namespace:ICSharpCode.ILSpy.Controls;assembly=ProjectRover"
        xmlns:converters="clr-namespace:ICSharpCode.ILSpy.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ICSharpCode.ILSpy.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/projectrover-logo.ico"
        Title="Project Rover">

    <Grid>
        <DockPanel>
            <!-- Place the MainMenu control (populated from MEF exports) -->
            <controls:MainMenu DockPanel.Dock="Top" />
            <controls:MainToolBar DockPanel.Dock="Top" />

            <dock:DockControl x:Name="DockHost" />
        </DockPanel>
    </Grid>
</Window>
