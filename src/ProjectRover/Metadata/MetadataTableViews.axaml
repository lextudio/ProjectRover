<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ICSharpCode.ILSpy.Metadata"
                    xmlns:dgrid="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
                    x:Class="ICSharpCode.ILSpy.Metadata.MetadataTableViews">

  <!-- Lightweight styling so generated grid cells look sane in Avalonia. -->
  <Style x:Key="DataGridCellStyle" Selector="dgrid|DataGridCell">
    <Setter Property="Padding" Value="2"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
  </Style>

  <Style x:Key="DataGridRowStyle" Selector="dgrid|DataGridRow">
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <!-- ByteWidthConverter lives in code; keep the key available for bindings if needed. -->
  <local:ByteWidthConverter x:Key="byteWidthConverter" />

  <!-- Simple filter templates to mimic WPF DataGridExtensions behavior. -->
  <Style x:Key="FilterIconStyle" Selector="TextBlock.filterIcon">
    <Setter Property="Margin" Value="0,2,6,0" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>

  <Style x:Key="FilterTextBoxStyle" Selector="TextBox.filterTextBox">
    <Setter Property="Margin" Value="0,2,0,0" />
    <Setter Property="MinWidth" Value="60" />
  </Style>

  <ControlTemplate x:Key="DefaultFilter" x:DataType="dgrid:DataGridColumn">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Column="0" Classes="filterIcon" Text="ðŸ”" />
      <TextBox Grid.Column="1"
               Classes="filterTextBox"
               Text="{Binding Path=FilterValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="HexFilter" x:DataType="dgrid:DataGridColumn">
    <local:HexFilterControl FilterValue="{Binding Path=FilterValue, Mode=TwoWay}" />
  </ControlTemplate>

  <!-- Fallback enum/flags filter templates: simple text filter when specialized flags UI is not available in Avalonia port -->
  <ControlTemplate x:Key="AssemblyFlagsFilter" x:DataType="dgrid:DataGridColumn">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="AssemblyHashAlgorithmFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="MethodAttributesFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="MethodImplAttributesFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="MethodSemanticsAttributesFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="TypeAttributesFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="PropertyAttributesFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="EventAttributesFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="FieldAttributesFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="ManifestResourceAttributesFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="GenericParameterAttributesFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <ControlTemplate x:Key="PInvokeAttributesFilter" x:DataType="dgrid:DataGridColumnHeader">
    <Grid>
      <TextBox Text="{Binding Path=FilterValue, Mode=TwoWay}" Watermark="Filter..." />
    </Grid>
  </ControlTemplate>

  <!-- WPF-ish styling: headers/cells/rows with hover/selected visuals and gridlines. -->
  <Style x:Key="MetadataGridRowTheme" Selector="dgrid|DataGridRow">
    <Setter Property="Padding" Value="0"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Style Selector="^:pointerover">
      <Setter Property="Background" Value="#FFE6F2FF"/>
    </Style>
    <Style Selector="^:selected">
      <Setter Property="Background" Value="#FFCCE5FF"/>
      <Setter Property="BorderBrush" Value="#FF7AA2FF"/>
    </Style>
  </Style>

  <Style x:Key="MetadataGridCellTheme" Selector="dgrid|DataGridCell">
    <Setter Property="Padding" Value="2"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Style Selector="^:pointerover">
      <Setter Property="Background" Value="#FFE6F2FF"/>
    </Style>
    <Style Selector="^:selected">
      <Setter Property="Background" Value="#FFCCE5FF"/>
      <Setter Property="BorderBrush" Value="#FF7AA2FF"/>
    </Style>
  </Style>

  <Style x:Key="MetadataGridHeaderTheme" Selector="dgrid|DataGridColumnHeader">
    <Style Selector="^:pointerover">
      <Setter Property="Background" Value="#FFE6F2FF"/>
    </Style>
    <Style Selector="^:pressed">
      <Setter Property="Background" Value="#FFCCE5FF"/>
    </Style>
  </Style>
</ResourceDictionary>
