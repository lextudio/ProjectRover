<UserControl x:Class="ProjectRover.Views.SearchDockView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ProjectRover.ViewModels"
             xmlns:searchResults="clr-namespace:ProjectRover.SearchResults"
             xmlns:converters="clr-namespace:ProjectRover.Converters"
             x:DataType="vm:MainWindowViewModel">
  <DockPanel>
    <Grid DockPanel.Dock="Top"
          Height="2">
      <ProgressBar IsVisible="{Binding IsSearching}"
                   IsIndeterminate="True"
                   Height="2"
                   MinHeight="2"
                   Background="Transparent"
                   CornerRadius="0" />
    </Grid>
    <Grid DockPanel.Dock="Top" ColumnDefinitions="*,Auto" Margin="5">
      <TextBox x:Name="SearchTextBox"
               Watermark="Search..."
               Text="{Binding SearchText}"
               Margin="0,0,8,0">
        <TextBox.InnerRightContent>
          <Panel Margin="0,0,5,0">
            <Button Background="Transparent"
                    BorderBrush="{x:Null}"
                    Padding="2"
                    Click="OnClearSearchClick"
                    IsVisible="{Binding SearchText, Converter={x:Static converters:StringConverters.IsNotNullOrEmpty}}"
                    Cursor="Hand">
              <Svg Path="{DynamicResource CloseIcon}" Width="14" Height="14" />
            </Button>
            <Svg Path="{DynamicResource SearchIcon}"
                 Width="14"
                 Height="14"
                 IsVisible="{Binding SearchText, Converter={x:Static converters:StringConverters.IsNullOrEmpty}}" />
          </Panel>
        </TextBox.InnerRightContent>
      </TextBox>
      <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
        <TextBlock Text="Search for:" VerticalAlignment="Center" />
        <ComboBox Width="140"
                  ItemsSource="{Binding SearchModes}"
                  SelectedItem="{Binding SelectedSearchMode}"
                  VerticalAlignment="Center">
          <ComboBox.ItemTemplate>
            <DataTemplate DataType="vm:SearchMode">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <Svg Width="16" Height="16" Path="{Binding IconKey, Converter={StaticResource IconKeyToPathConverter}}" />
                <TextBlock Text="{Binding Name}" />
              </StackPanel>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
      </StackPanel>
    </Grid>
    <TextBlock DockPanel.Dock="Top"
               Text="{Binding NumberOfResultsText}"
               IsVisible="{Binding NumberOfResultsText, Converter={x:Static converters:StringConverters.IsNotNullOrEmpty}}"
               Margin="10 5 0 5"
               Foreground="#919191"
               FontSize="12"/>
    <Grid DockPanel.Dock="Top" Margin="5,0,5,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="220" />
        <ColumnDefinition Width="220" />
        <ColumnDefinition Width="150" />
      </Grid.ColumnDefinitions>
      <TextBlock Text="Name" FontWeight="Bold" />
      <TextBlock Grid.Column="1" Text="Location" FontWeight="Bold" />
      <TextBlock Grid.Column="2" Text="Assembly" FontWeight="Bold" />
    </Grid>
    <ListBox ItemsSource="{Binding SearchResults}"
             SelectedItem="{Binding SelectedSearchResult}"
             Background="Transparent"
             BorderThickness="0">
      <ListBox.ItemTemplate>
        <DataTemplate DataType="searchResults:BasicSearchResult">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="220" />
              <ColumnDefinition Width="220" />
              <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Spacing="6">
               <Svg Width="16" Height="16" Path="{Binding IconPath}" />
               <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
               <Svg Width="16" Height="16" Path="{Binding LocationIconPath}" />
               <TextBlock Text="{Binding Location}" TextTrimming="CharacterEllipsis" />
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="6">
               <Svg Width="16" Height="16" Path="{Binding AssemblyIconPath}" />
               <TextBlock Text="{Binding Assembly}" TextTrimming="CharacterEllipsis" />
            </StackPanel>
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </DockPanel>
</UserControl>
