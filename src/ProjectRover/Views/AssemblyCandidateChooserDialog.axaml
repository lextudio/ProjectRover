<Window xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vm="clr-namespace:ProjectRover.ViewModels"
  x:Class="ProjectRover.Views.AssemblyCandidateChooserDialog"
  x:DataType="vm:AssemblyCandidateChooserViewModel"
  Width="600" Height="320" Title="Select Assembly Candidate">
  <Design.DataContext>
    <vm:AssemblyCandidateChooserViewModel />
  </Design.DataContext>
  <StackPanel Margin="8">
    <TextBlock Text="Multiple assembly candidates found. Select one to attempt resolve:" Margin="0,0,0,8" />
    <ListBox Name="CandidateList" ItemsSource="{Binding Candidates}" SelectedItem="{Binding Selected}" Height="200"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
      <Button Name="OkButton" Content="OK" Width="80" Margin="0,0,8,0" IsDefault="True"/>
      <Button Name="CancelButton" Content="Cancel" Width="80" IsCancel="True"/>
    </StackPanel>
  </StackPanel>
</Window>
