<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ICSharpCode.ILSpy.Controls.SearchBox"
             x:Name="Root">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <TextBox x:Name="PART_TextBox"
             Grid.Column="0"
             Margin="0"
             Padding="4,2,2,2"
             Text="{Binding Text, ElementName=Root, Mode=TwoWay}" />

    <Label x:Name="WatermarkLabel"
           Grid.Column="0"
           Margin="6,2,0,0"
           HorizontalAlignment="Left"
           VerticalAlignment="Center"
           FontStyle="Italic"
           Foreground="{Binding WatermarkColor, ElementName=Root}"
           IsHitTestVisible="False"
           Content="{Binding WatermarkText, ElementName=Root}" />

    <Button x:Name="IconButton"
            Grid.Column="1"
            Margin="4,0,0,0"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Padding="4"
            Cursor="Arrow">
      <PathIcon x:Name="IconGlyph" Width="14" Height="14" ToolTip.Tip="Search" />
    </Button>
  </Grid>
</UserControl>
