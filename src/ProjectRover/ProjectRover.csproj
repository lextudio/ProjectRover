<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    <ApplicationIcon>Assets\projectrover-logo.ico</ApplicationIcon>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <RootNamespace>ProjectRover</RootNamespace>
    <AssemblyName>ProjectRover</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" />
    <PackageReference Include="Avalonia.Desktop" />
    <PackageReference Include="Avalonia.Svg.Skia" />
    <PackageReference Include="Avalonia.Themes.Fluent" />
    <PackageReference Include="Avalonia.Fonts.Inter" />
    <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" />
    <PackageReference Include="Avalonia.Xaml.Behaviors" />
    <PackageReference Include="CommunityToolkit.Mvvm" />
    <PackageReference Include="DeviceId" />
    <PackageReference Include="Microsoft.Extensions.Configuration" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Microsoft.Extensions.Http" />
    <PackageReference Include="Microsoft.Extensions.Http.Polly" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" />
    <PackageReference Include="Serilog" />
    <PackageReference Include="Serilog.Extensions.Logging" />
    <PackageReference Include="Serilog.Sinks.Console" />
    <PackageReference Include="Serilog.Settings.Configuration" />
    <PackageReference Include="Serilog.Sinks.File" />
    <PackageReference Include="Polly.Contrib.WaitAndRetry" />
    <PackageReference Include="System.Composition" />
    <PackageReference Include="TextMateSharp.Grammars" />
    <PackageReference Include="ResXResourceReader.NetStandard" />
  </ItemGroup>
  <PropertyGroup>
    <UsingLocalDecompiler Condition="Exists('..\..\..\ilspy\ICSharpCode.Decompiler\ICSharpCode.Decompiler.csproj')">true</UsingLocalDecompiler>
    <IlSpyRoot>$(MSBuildThisFileDirectory)..\..\..\ilspy\</IlSpyRoot>
    <UsingLocalIlSpyX Condition="Exists('$(IlSpyRoot)ICSharpCode.ILSpyX/ICSharpCode.ILSpyX.csproj')">true</UsingLocalIlSpyX>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Condition="'$(UsingLocalIlSpyX)' == 'true'" Include="..\..\..\ilspy\ICSharpCode.ILSpyX\ICSharpCode.ILSpyX.csproj" />
    <ProjectReference Include="..\AvaloniaEdit\src\AvaloniaEdit\AvaloniaEdit.csproj" />
    <ProjectReference Include="..\AvaloniaEdit\src\AvaloniaEdit.TextMate\AvaloniaEdit.TextMate.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(UsingLocalDecompiler)' == 'true'">
    <ProjectReference Include="..\..\..\ilspy\ICSharpCode.Decompiler\ICSharpCode.Decompiler.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(UsingLocalDecompiler)' != 'true'">
    <PackageReference Include="ICSharpCode.Decompiler" Version="10.0.0.8079-preview1" />
  </ItemGroup>
  <Target Name="EnsureILSpyX" BeforeTargets="Build" Condition="'$(UsingLocalIlSpyX)' != 'true'">
    <Error Text="ICSharpCode.ILSpyX project not found. Ensure the ILSpy repository exists at $(IlSpyRoot)ICSharpCode.ILSpyX/ICSharpCode.ILSpyX.csproj or adjust ProjectRover.csproj to point to your ILSpyX location." />
  </Target>
  <ItemGroup>
    <PackageReference Include="Dock.Avalonia" />
    <PackageReference Include="Dock.Model.Avalonia" />
    <PackageReference Include="Dock.Avalonia.Themes.Fluent" />
    <PackageReference Include="SkiaSharp" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="appsettings*.json" />
  </ItemGroup>
  <Import Project="..\ProjectRover.Shared\ProjectRover.Shared.projitems" Label="Shared" />
</Project>
