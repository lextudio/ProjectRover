<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:editing="https://github.com/avaloniaui/avaloniaedit"
             x:Class="ProjectRover.App"
             RequestedThemeVariant="Light"
             Name="ProjectRover">

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        
        <Style Selector="TreeViewItem">
            <Setter Property="MinHeight" Value="24" />
        </Style>
        
        <Style Selector="editing|TextArea">
            <Setter Property="SelectionBrush" Value="#9ECCFD" />
        </Style>
        
        <Style Selector="GridSplitter">
            <Setter Property="Width" Value="1" />
            <Setter Property="MinWidth" Value="1" />
            <Setter Property="Background" Value="#DFDFDF" />
        </Style>
        
        <Style Selector="Button:disabled">
            <Setter Property="Opacity" Value="0.5" />
        </Style>
    </Application.Styles>
    
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="About Project Rover" Click="About_OnClick" />
        </NativeMenu>
    </NativeMenu.Menu>

</Application>
